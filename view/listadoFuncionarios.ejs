<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Funcionarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div>
        <h2 class="my-4">Listado de Funcionarios</h2>
        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID Usuario</th>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Correo</th>
                    <th>EPS</th>
                    <th>Fondo de Pensión</th>
                    <th>Número de Hijos</th>
                    <th>Estado Civil</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% funcionarios.forEach(funcionario => { %>
                    <tr>
                        <td><%= funcionario.idusuario %></td>
                        <td><%= funcionario.cedula %></td>
                        <td><%= funcionario.nombre %></td>
                        <td><%= funcionario.apellido %></td>
                        <td><%= funcionario.correo %></td>
                        <td><%= funcionario.eps %></td>
                        <td><%= funcionario.fp %></td>
                        <td><%= funcionario.hijos %></td>
                        <td><%= funcionario.estadocivil %></td>
                        <td>
                            <a href="/funcionarios/<%= funcionario.idusuario %>" class="btn btn-primary btn-sm">Ver</a>
                            <a href="/funcionarios/editar/<%= funcionario.idusuario %>" class="btn btn-warning btn-sm">Editar</a>
                            <form action="/funcionarios/eliminar/<%= funcionario.idusuario %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
