<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado facturas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2 class="my-4">Listado facturas</h2>
        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID factura</th>
                    <th>Proveedor</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% facturafa.forEach(facturaf => { %>
                    <tr>
                        <td><%= facturaf.idfactura %></td>
                        <td><%= facturaf.nombrep %></td>
                        <td><%= facturaf.descripcion %></td>
                        <td><%= facturaf.precio %></td>
                        <td>
                            <a href="/facturafa/<%= facturaf.idfactura %>" class="btn btn-primary btn-sm">Ver</a>
                            <a href="/facturafa/editar/<%= facturaf.idfactura %>" class="btn btn-warning btn-sm">Editar</a>
                            <form action="/facturafa/eliminar/<%= facturaf.idfactura %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>