<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado facturas de bodega</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2 class="my-4">Listado facturas de bodega</h2>

        <div id="mensaje" class="alert" role="alert" style="display: none;"></div>

        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID Producto</th>
                    <th>Marca</th>
                    <th>Descripcion</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% facturabo.forEach(facturab => { %>
                    <tr>
                        <td><%= facturab.idproducto %></td>
                        <td><%= facturab.marca %></td>
                        <td><%= facturab.descripcion %></td>
                        <td><%= facturab.cantidad %></td>
                        <td><%= facturab.precio %></td>
                        <td>
                            <a href="/facturabo/<%= facturab.idproducto %>" class="btn btn-primary btn-sm">Ver</a>
                            <a href="/facturabo/editar/<%= facturab.idproducto %>" class="btn btn-warning btn-sm">Editar</a>
                            <form action="/facturabo/eliminar/<%= facturab.idproducto %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
